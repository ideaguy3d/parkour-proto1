extends layout

include _includes/sharedHTMLfunctions

block content
    #banner.page-header
        .row <!-- The row for the header. -->
            .col-lg-6
                h1= pageHeader.title + " length = " + (pageHeader.title['length'] * 2)
                small &nbsp; - #{pageHeader.strapline} -
    .row
        .col-xs-12.col-sm-8
            .row.list-group
                each location in locations
                    .col-xs-12.list-group-item
                        h4 <!-- location heading -->
                            a(href="/location")= location.name
                            small &nbsp;
                                +outputRating(location.rating)
                            span.badge.pull-right.badge-info= location.distance
                        p.address= location.address
                        p <!-- will show labels -->
                            each facility in location.facilities
                                span.label.label-warning= facility
                                | &nbsp;
        <!-- SIDE BAR -->
        .col-xs-12.col-sm-4
            p.lead= sidebar